      <div class="dropdown-content">
        <a id="av" href="/api/project">Add projects</a>
        <a id="av" href="/api/listproject">project list</a>
      </div>
    </div>
    <div class="dropdown">
      <button class="btn dropbtn">Employees</button>
      <div class="dropdown-content">
        <a id="av" href="/api/employee">Add Employee</a>
        <a id="av" href="/api/listemployee">Employee list</a>
      </div>
    </div>
    <div class="dropdown">
